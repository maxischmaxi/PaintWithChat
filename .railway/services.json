{
  "services": [
    {
      "name": "api",
      "icon": "üöÄ",
      "source": {
        "repo": "github",
        "rootDirectory": "/"
      },
      "build": {
        "builder": "dockerfile",
        "dockerfilePath": "packages/api/Dockerfile"
      },
      "deploy": {
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "on_failure",
        "restartPolicyMaxRetries": 10
      },
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3001"
      },
      "requiredVariables": [
        "MONGODB_URI",
        "JWT_SECRET",
        "TWITCH_CLIENT_ID",
        "TWITCH_CLIENT_SECRET",
        "TWITCH_REDIRECT_URI",
        "CORS_ORIGIN"
      ]
    },
    {
      "name": "control-app",
      "icon": "üéÆ",
      "source": {
        "repo": "github",
        "rootDirectory": "/"
      },
      "build": {
        "builder": "dockerfile",
        "dockerfilePath": "packages/control-app/Dockerfile"
      },
      "deploy": {
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "on_failure"
      },
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "requiredVariables": [
        "VITE_API_URL",
        "VITE_WS_URL",
        "VITE_TWITCH_CLIENT_ID",
        "VITE_TWITCH_REDIRECT_URI"
      ]
    },
    {
      "name": "overlay-app",
      "icon": "üëÅÔ∏è",
      "source": {
        "repo": "github",
        "rootDirectory": "/"
      },
      "build": {
        "builder": "dockerfile",
        "dockerfilePath": "packages/overlay-app/Dockerfile"
      },
      "deploy": {
        "healthcheckPath": "/",
        "healthcheckTimeout": 100,
        "restartPolicyType": "on_failure"
      },
      "environment": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "requiredVariables": [
        "VITE_API_URL",
        "VITE_WS_URL",
        "VITE_TWITCH_CLIENT_ID",
        "VITE_TWITCH_REDIRECT_URI"
      ]
    }
  ],
  "plugins": [
    {
      "name": "mongodb",
      "icon": "üçÉ",
      "type": "mongodb",
      "version": "8.0"
    }
  ]
}
