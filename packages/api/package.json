{
  "name": "@paintwithchat/api",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "railway:build": "cd ../.. && pnpm install --frozen-lockfile && pnpm --filter @paintwithchat/shared build && pnpm --filter @paintwithchat/api build",
